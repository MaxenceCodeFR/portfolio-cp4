<h1>Project index</h1>

        {% for project in projects %}
                <img class src="{{ vich_uploader_asset(project) }}">
                {{ project.description }}
                {{ project.title }}

                {% if is_granted("ROLE_ADMIN") %}

                    <a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>


            {% endif %}
        {% else %}

                <p colspan="4">no records found</p>

        {% endfor %}

        {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('app_project_new') }}">Create new</a>
        {% endif %}



